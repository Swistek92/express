extends ../layout

block content
  h1= title
  nav
    ul
      li
        a(href='/admin/news/add') Add something new
  table
    tr
      th id
      th title
      th date added
      th action
    each item, index in data
      tr 
        td=index+1
        td=item.title
        td #{item.created.toDateString()}
        td
          a(href=`/admin/news/delete/${item._id}`) remove