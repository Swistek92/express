extends layout

block content
  h1= title
  if show
    form(method='post')
      h2 what's your favorite dish
      ul 
        each item in data 
          li 
            label=item.title
            input(type="radio" name="quiz" value=item._id) 
        br
        input(type='submit' value="vote")
      h3 cast your vote to see the result
  else
    h5 you do allready vote
    h1 score
    ul
    each item in data
      li #{item.title}: #{item.vote} (#{Math.round(item.vote/sum*100)}%)

  h5 sum of votes: #{sum}